{% if section.settings.checkRightEvent == true %}
<style>

  .rich-text-right__wrapper{
    position: relative;
    overflow: hidden;
  	height: 640px;
    width: 100%;
    color: #fff !important;
    display: -webkit-box;   
    display: -moz-box;     
    display: -ms-flexbox;     
    display: -webkit-flex;    
    display: flex; 
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
  } 
  .rich-text-right__block:first-child{
    height: 100%;
  }
  
  .rich-text-right__block:nth-child(2){
  padding-right: 15%;
  }
  
    .rich-text-right__block{
  	width: 50%;
      position: relative;
      padding: 0 25px;
  }
  .watch{
    position: absolute;
    top:-100px;
    right: 100px;
  }
  .phone{
    position: absolute;
    right: -200px;
  }
  .bgImage{
  position: absolute;
    left: -100px;
    top: 56px;top: 50%;
    transform: translateY(-50%);
/*     width: 100%; */
/*     height: 75%; */
    order:1;
  }
        .headphones{
      position: absolute;
      bottom:-60px;
      right: 100px;
      z-index: 200;
  }
  
  @media (max-width: 768px){
    .rich-text-right__wrapper{
    height: auto;
      padding: 60px 25px;

    }
    .phone, .watch, .headphones{
    display: none;
    }
    .rich-text-right__block{
    width: 100%;
    }
    .bgImage{
    
      position: unset;
      transform: unset;
    }
    .rich-text-right__block:first-child{
    order: 2;
      padding-top: 40px;
  }
      .rich-text-right__block:nth-child(2){
  padding-right: unset;
  }
  }
  


</style>


<div style="position: relative;">
          <div class="headphones">
  			<img src="{{ 'Image_9.png' | file_url }}" />
          </div>
<div class="rich-text-right__wrapper page-width direction-mobile" style="background-color:{{ section.settings.bgColor}};">
    <div class="rich-text-right__block">
  		<img src="{{ section.settings.image | img_url: '900x'}}" class="bgImage">
  	</div>
	<div class="rich-text-right__block">
      <h2 class="new-page__main-title" data-aos="fade-up">{{ section.settings.title }}</h2>
      <div data-aos="fade-up">{{ section.settings.text }}</div>
  	</div>

  <div class="watch">
<img src="{{ 'Image_8.png' | file_url }}" />
  </div>

    <div class="phone" data-aos="zoom-out-down">
		<img src="{{ 'Image_10.png' | file_url }}" />
  </div>

  </div>
 

</div>

{% endif %}
{% schema %}
  {
    "name": "Rich text right",
    "settings": [
		{
        "type": "checkbox",
        "id": "checkRightEvent",
        "label": "Enable",
		"default": true
      },
          {
            "type": "color",
            "id": "bgColor",
            "label": "Background color"

          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Background-image"

          },
			{
			"type": "text",
            "id": "title",
            "label": "Title"
			},
			{
			"type": "richtext",
            "id": "text",
            "label": "Description",
			"default": "<p>Made of premium Amish sourced wood and high-quality plastic, designed to blend into any environment. Tidy up your nightstand - organize your mind!</p>"
			}
],
    "presets": [{
        "name": "Rich text",
        "category": "Text"
    }]

  }
{% endschema %}

